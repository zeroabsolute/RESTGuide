{
  "name": "restguide",
  "version": "1.0.0",
  "description": "An opinionated guide on how to build a RESTful API",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/eslint/bin/eslint.js \"./src/**/*.js\"",
    "test": "cross-env NODE_ENV=test node_modules/nyc/bin/nyc.js node_modules/mocha/bin/_mocha --require @babel/register --timeout 30000 --exit \"./src/**/*.test.js*\"",
    "test:only": "cross-env NODE_ENV=test node_modules/mocha/bin/_mocha --timeout 30000 --exit --require @babel/register $1",
    "test:ci": "npm run lint && npm run test",
    "start": "nodemon --exec babel-node ./src/index.js",
    "build": "babel src --out-dir dist --copy-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeroabsolute/RESTGuide.git"
  },
  "keywords": [
    "REST",
    "API",
    "guide",
    "Node.js",
    "Express.js"
  ],
  "author": "Gerald Haxhi",
  "license": "MIT",
